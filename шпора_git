git clone <ссылка>              # Скачать проект с GitHub/GitLab
git pull                        # Обновить код с сервера (делай перед началом работы)
git status                      # Показать, что изменилось
git add .                       # Добавить все файлы для коммита
git add <файл>                  # Добавить один конкретный файл
git commit -m "сообщение"       # Сохранить версию (пиши, что сделал)
git push                        # Отправить код на сервер
git branch                      # Показать все ветки
git checkout -b <имя>           # Создать и перейти на новую ветку
git checkout <имя>              # Переключиться на другую ветку
git merge <ветка>               # Объединить ветку с текущей
git log --oneline               # Показать историю коммитов (кратко)
git diff                        # Показать изменения в файлах
git restore <файл>              # Отменить изменения в файле (до коммита)
git reset HEAD <файл>           # Убрать файл из индекса (после git add)
git stash                       # Временно спрятать изменения
git stash pop                   # Вернуть спрятанные изменения
git remote -v                   # Показать, куда отправляется код